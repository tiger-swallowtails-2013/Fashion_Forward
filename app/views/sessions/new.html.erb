<script>
  $('#navbar-button').addClass('hidden')
  $('#btn-home').removeClass('hidden')
</script>
<div>
  <% unless @errors.nil? %>
    <p><%=@errors%></p>
  <% end %>

  <%= form_tag sessions_path, html:{role:"form"} do %>
    <div class="form-group">
      <%= label_tag :username %><br>
      <%= text_field_tag :username, params[:username], class:"form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %><br>
      <%= password_field_tag :password, nil, {class:"form-control"} %>
    </div>
    <%= submit_tag "Log In", class:"btn btn-primary" %>
  <% end %>
</div>

<p id="or">OR</p>

<%= button_to "Signup", signup_path, {:method => :get, class: "btn btn-primary"} %>