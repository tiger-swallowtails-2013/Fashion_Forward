<% unless @errors.nil? %>
  <p><%=@errors%></p>
<% end %>
<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :username %><br>
    <%= text_field_tag :username, params[:username] %>
  </p>
  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </p>
  <%= submit_tag "Log In" %>
<% end %>