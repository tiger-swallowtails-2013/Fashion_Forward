<!DOCTYPE html>
<html>
<head>
  <title>Fashion Forward</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="nav">
    <% if current_user %>
      <%= image_tag("http://www.gravatar.com/avatar/#{current_user.gravatar_hash}?d=#{current_user.default_image}", :size => "80x80") %>
      <%= "Welcome, #{current_user.username}" %><br>
      <%= link_to 'Logout', logout_path %>
    <% else %>
      <%= link_to 'Login', login_path %> or <%= link_to 'Signup', signup_path %>
    <% end %>
  </div>

<%= yield %>

</body>
</html>

